<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    
    <ImageView 
        android:id="@+id/iv_vps_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:background="@drawable/fileicon"
        />
    
    <TextView 
        android:id="@+id/tv_vps_filename_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_vps_item_text"
        android:layout_alignTop="@id/iv_vps_item_text"
        android:layout_alignBottom="@id/iv_vps_item_text"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="HHHHH"
        />
    
</RelativeLayout>